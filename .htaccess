<IfModule mod_rewrite.c>
    RewriteEngine On

    # When this repo is deployed at /public_html/api, requests like
    # /api/health map here as "health" and must be routed to api/index.php.
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ api/index.php?path=$1 [QSA,L]
</IfModule>
